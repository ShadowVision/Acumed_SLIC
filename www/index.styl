bar-height = 3rem
font-size = 1rem
full = 99.9%

//FROM DESIGN
acumed-blue = #00B2EE
acumed-gold = #E8B012
acumed-grey = #CCCCCC

//FROM THEIR NEW SITE
acumed-gold = #f9c72f
acumed-grey = #BEBCB5
acumed-blue = #00a7e1

