  @extend .icon
  background-image: url(assets/images/menu-icon.svg)
  position absolute
  top 0
  left 0

#font-size-icon
  @extend .icon
  background-image: url(assets/images/fontsize-icon.svg)
  position absolute
  top 0
  right 0

