  @extend .media-icon
  background-image: url(assets/images/autoplay-icon.svg)

.sound.autoplay #autoplay-icon
  @extend .active
  @extend .sound .media-icon

.sound #autoplay-icon
  @extend .sound .media-icon

#restart-icon
  @extend .media-icon
  background-image: url(assets/images/restart-icon.svg)

.sound #restart-icon
  @extend .sound .media-icon

.playing #play-icon
  @extend #play-icon
  background-image: url(assets/images/pause-icon.svg)

#sound-icon
  @extend .media-icon
  background-image: url(assets/images/sound-icon.svg)

